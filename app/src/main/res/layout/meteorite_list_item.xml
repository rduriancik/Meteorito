<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="Name" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/item_name"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#f6f6f6" />

            <TextView
                android:id="@+id/class_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_name"
                android:layout_alignStart="@+id/item_name"
                android:layout_below="@+id/divider"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="Class:" />

            <TextView
                android:id="@+id/item_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/class_label"
                android:layout_toEndOf="@+id/class_label"
                android:layout_toRightOf="@id/class_label"
                tools:text="Class" />

            <TextView
                android:id="@+id/mass_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_name"
                android:layout_alignStart="@+id/item_name"
                android:layout_below="@+id/class_label"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="Mass:" />

            <TextView
                android:id="@+id/item_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/mass_label"
                android:layout_toEndOf="@+id/class_label"
                android:layout_toRightOf="@+id/class_label"
                tools:text="Mass" />

            <TextView
                android:id="@+id/year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/item_year"
                android:layout_toStartOf="@+id/item_year"
                android:text="Year:" />

            <TextView
                android:id="@+id/item_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/year_label"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                tools:text="Year" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>